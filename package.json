{
  "name": "content-creation-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsc && vite build",
    "build:simple": "tsc && vite build --mode production",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "npm run build:simple && node server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run server\""
  },
  "devDependencies": {
    "typescript": "~5.8.3",
    "vite": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^6.0.0-alpha.165",
    "@mui/material": "^6.0.0-alpha.165",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "axios": "^1.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1"
  }
}
